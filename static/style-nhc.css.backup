/* DataScienve LLM Chat Model App - Modern Design */

background: var(--color-sidebar);
border-left: 1px solid var(--color-border);
display: flex;
flex-direction: column;
transition: transform 0.3s ease;
}

.sidebar-header {
    padding: 1.5rem;
    border-bottom: 1px solid var(--color-border);
}

.logo {
    display: flex;
    align-items: center;
    gap: 0.75rem;
}

.logo-icon {
    width: 48px;
    height: 48px;
    background: var(--nhc-green);
    color: white;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 1rem;
}

/* New Chat Button */
.new-chat-btn {
    margin: 1rem;
    padding: 0.875rem 1.25rem;
    background: var(--nhc-green);
    color: white;
    border: none;
    border-radius: 12px;
    font-family: 'Cairo', sans-serif;
    font-size: 0.95rem;
    font-weight: 600;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    transition: all 0.2s ease;
}

.new-chat-btn:hover {
    background: var(--nhc-dark-green);
    transform: translateY(-1px);
    box-shadow: var(--shadow-md);
}

/* Chat History */
.chat-history {
    flex: 1;
    overflow-y: auto;
    padding: 0 1rem;
}

.history-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.75rem;
    padding: 0 0.5rem;
}

.history-title {
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--color-text-light);
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.clear-history-btn {
    background: transparent;
    border: none;
    color: var(--color-text-light);
    cursor: pointer;
    padding: 0.25rem;
    border-radius: 6px;
    transition: all 0.2s ease;
    display: flex;
    align-items: center;
    justify-content: center;
}

.clear-history-btn:hover {
    background: rgba(239, 68, 68, 0.1);
    color: #ef4444;
}

.history-list {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
}

.no-history {
    text-align: center;
    padding: 2rem 1rem;
    color: var(--color-text-light);
    font-size: 0.875rem;
}

.history-item {
    padding: 0.75rem;
    background: white;
    border: 1px solid var(--color-border);
    border-radius: 10px;
    cursor: pointer;
    transition: all 0.2s ease;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    position: relative;
}

.history-item:hover {
    background: var(--nhc-light-green);
    border-color: var(--nhc-green);
}

.history-item.active {
    background: var(--nhc-light-green);
    border-color: var(--nhc-green);
    border-width: 2px;
}

.history-item-content {
    flex: 1;
    min-width: 0;
}

.history-item-title {
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-text-primary);
    margin-bottom: 0.25rem;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.history-item-time {
    font-size: 0.75rem;
    color: var(--color-text-light);
}

.delete-session-btn {
    background: transparent;
    border: none;
    color: var(--color-text-light);
    cursor: pointer;
    padding: 0.375rem;
    border-radius: 6px;
    transition: all 0.2s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    flex-shrink: 0;
}

.history-item:hover .delete-session-btn {
    opacity: 1;
}

.delete-session-btn:hover {
    background: rgba(239, 68, 68, 0.1);
    color: #ef4444;
}

/* Sidebar Footer */
.sidebar-footer {
    padding: 1rem;
    border-top: 1px solid var(--color-border);
}

.language-switcher {
    display: flex;
    gap: 0.5rem;
    margin-bottom: 1rem;
    padding: 0.25rem;
    background: var(--color-background);
    border-radius: 10px;
}

.lang-btn {
    flex: 1;
    padding: 0.5rem;
    background: transparent;
    border: none;
    border-radius: 8px;
    font-family: 'Cairo', sans-serif;
    font-size: 0.85rem;
    font-weight: 500;
    color: var(--color-text-secondary);
    cursor: pointer;
    transition: all 0.2s ease;
}

.lang-btn:hover {
    background: white;
    color: var(--color-text-primary);
}

.lang-btn.active {
    background: var(--nhc-green);
    color: white;
    font-weight: 600;
}

.user-info {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem;
    background: white;
    border-radius: 12px;
    border: 1px solid var(--color-border);
    position: relative;
}

.user-avatar {
    width: 40px;
    height: 40px;
    background: var(--nhc-blue);
    color: white;
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 600;
    font-size: 0.9rem;
    flex-shrink: 0;
}

.user-details {
    flex: 1;
    min-width: 0;
}

.settings-btn {
    width: 36px;
    height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-background);
    border: 1px solid var(--color-border);
    border-radius: 8px;
    cursor: pointer;
    color: var(--color-text-secondary);
    transition: all 0.2s ease;
    flex-shrink: 0;
    margin-right: 0.5rem;
}

.settings-btn:hover {
    background: var(--nhc-light-green);
    border-color: var(--nhc-green);
    color: var(--nhc-green);
    transform: rotate(45deg);
}

.logout-btn {
    width: 36px;
    height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-background);
    border: 1px solid var(--color-border);
    border-radius: 8px;
    cursor: pointer;
    color: var(--color-text-secondary);
    transition: all 0.2s ease;
    flex-shrink: 0;
}

.logout-btn:hover {
    background: #fee;
    border-color: #ef4444;
    color: #ef4444;
}

.user-name {
    font-size: 0.9rem;
    font-weight: 600;
    color: var(--color-text-primary);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.user-email {
    font-size: 0.75rem;
    color: var(--color-text-secondary);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

/* Main Content */
.main-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    background: white;
    overflow: hidden;
}

/* Header */
.chat-header {
    padding: 1.5rem 2rem;
    background: white;
    border-bottom: 1px solid var(--color-border);
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.header-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-text-primary);
    margin-bottom: 0.25rem;
}

.header-subtitle {
    font-size: 0.9rem;
    color: var(--color-text-secondary);
}

.header-actions {
    display: flex;
    gap: 0.75rem;
}

.action-btn {
    padding: 0.625rem 1rem;
    background: white;
    border: 1px solid var(--color-border);
    border-radius: 10px;
    font-family: 'Cairo', sans-serif;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-text-primary);
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    transition: all 0.2s ease;
}

.action-btn:hover {
    background: var(--color-background);
    border-color: var(--nhc-green);
}

.reset-btn:hover {
    background: var(--nhc-light-green);
    border-color: var(--nhc-green);
    color: var(--nhc-green);
}

.dashboard-btn {
    background: linear-gradient(135deg, #6366f1, #8b5cf6);
    border-color: transparent;
    color: white;
}

.dashboard-btn:hover {
    background: linear-gradient(135deg, #4f46e5, #7c3aed);
    border-color: transparent;
    color: white;
    box-shadow: 0 4px 12px rgba(99, 102, 241, 0.3);
    transform: translateY(-2px);
}

/* Chat Container */
.chat-container {
    flex: 1;
    overflow-y: auto;
    padding: 2rem;
    background: var(--color-background);
}

/* Welcome Message */
.welcome-message {
    max-width: 700px;
    margin: 0 auto;
    padding: 3rem 2rem;
    text-align: center;
}

.ai-badge {
    width: 64px;
    height: 64px;
    background: var(--ai-badge-bg);
    color: white;
    border-radius: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 1.25rem;
    margin: 0 auto 1.5rem;
    box-shadow: var(--shadow-md);
}

.welcome-title {
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--color-text-primary);
    margin-bottom: 0.75rem;
}

.welcome-description {
    font-size: 1.05rem;
    color: var(--color-text-secondary);
    margin-bottom: 2rem;
    line-height: 1.6;
}

.welcome-features {
    display: flex;
    gap: 1rem;
    margin-bottom: 2rem;
    justify-content: center;
    flex-wrap: wrap;
}

.feature-item {
    padding: 0.75rem 1.25rem;
    background: white;
    border: 1px solid var(--color-border);
    border-radius: 12px;
    font-size: 0.9rem;
    color: var(--color-text-primary);
}

.suggestions-label {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-text-secondary);
    margin-bottom: 1rem;
}

.suggestions {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    max-width: 500px;
    margin: 0 auto;
}

.suggestion-btn {
    padding: 1rem 1.5rem;
    background: white;
    border: 1px solid var(--color-border);
    border-radius: 12px;
    font-family: 'Cairo', sans-serif;
    font-size: 0.95rem;
    color: var(--color-text-primary);
    cursor: pointer;
    text-align: right;
    transition: all 0.2s ease;
}

.suggestion-btn:hover {
    background: var(--nhc-light-green);
    border-color: var(--nhc-green);
    transform: translateX(-4px);
}

/* Messages */
.message {
    display: flex;
    gap: 1rem;
    margin-bottom: 1.5rem;
    max-width: 900px;
    animation: slideIn 0.3s ease-out;
}

@keyframes slideIn {
    from {
        opacity: 0;
        transform: translateY(10px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.message-avatar {
    width: 40px;
    height: 40px;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.25rem;
    flex-shrink: 0;
}

.user-message {
    flex-direction: row-reverse;
    margin-right: 0;
    margin-left: auto;
}

.user-message .message-avatar {
    background: var(--nhc-blue);
    color: white;
    font-size: 0.9rem;
    font-weight: 600;
}

.user-message .message-content {
    background: var(--user-message-bg);
    color: var(--color-text-primary);
    border-radius: 16px 16px 4px 16px;
    padding: 1rem 1.25rem;
    max-width: 70%;
    font-size: 0.95rem;
    line-height: 1.6;
}

.bot-message .message-avatar {
    background: var(--nhc-green);
    color: white;
    font-size: 0.75rem;
    font-weight: 700;
}

.bot-message .message-content {
    background: var(--bot-message-bg);
    color: var(--color-text-primary);
    border: 1px solid var(--color-border);
    border-radius: 16px 16px 16px 4px;
    padding: 1rem 1.25rem;
    max-width: 70%;
    font-size: 0.95rem;
    line-height: 1.7;
    box-shadow: var(--shadow-sm);
}

/* Typing Indicator */
.typing-indicator {
    display: flex;
    gap: 5px;
    padding: 0.5rem 0;
}

.typing-dot {
    width: 8px;
    height: 8px;
    background: var(--nhc-green);
    border-radius: 50%;
    animation: bounce 1.4s infinite ease-in-out;
}

.typing-dot:nth-child(1) {
    animation-delay: -0.32s;
}

.typing-dot:nth-child(2) {
    animation-delay: -0.16s;
}

@keyframes bounce {

    0%,
    80%,
    100% {
        transform: scale(0);
        opacity: 0.5;
    }

    40% {
        transform: scale(1);
        opacity: 1;
    }
}

/* Input Area */
.input-area {
    padding: 1.5rem 2rem;
    background: white;
    border-top: 1px solid var(--color-border);
}

.input-container {
    max-width: 900px;
    margin: 0 auto;
    background: var(--color-background);
    border: 2px solid var(--color-border);
    border-radius: 16px;
    padding: 0.75rem 1rem;
    transition: all 0.2s ease;
}

.input-container:focus-within {
    border-color: var(--nhc-green);
    background: white;
}

textarea {
    width: 100%;
    background: transparent;
    border: none;
    color: var(--color-text-primary);
    font-family: 'Cairo', sans-serif;
    font-size: 0.95rem;
    resize: none;
    outline: none;
    min-height: 24px;
    max-height: 150px;
}

textarea::placeholder {
    color: var(--color-text-light);
}

.input-actions {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-top: 0.75rem;
    padding-top: 0.75rem;
    border-top: 1px solid var(--color-border);
}

.icon-btn {
    padding: 0.5rem;
    background: transparent;
    border: none;
    color: var(--color-text-secondary);
    cursor: pointer;
    border-radius: 8px;
    transition: all 0.2s ease;
    display: flex;
    align-items: center;
    justify-content: center;
}

.icon-btn:hover {
    background: var(--color-background);
    color: var(--nhc-green);
}

.send-btn {
    margin-right: auto;
    padding: 0.625rem 1.25rem;
    background: var(--nhc-green);
    color: white;
    border: none;
    border-radius: 10px;
    font-family: 'Cairo', sans-serif;
    font-size: 0.875rem;
    font-weight: 600;
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    transition: all 0.2s ease;
}

.send-btn:hover {
    background: var(--nhc-dark-green);
    transform: translateY(-1px);
    box-shadow: var(--shadow-md);
}

.send-btn:disabled {
    opacity: 0.5;
    cursor: not-allowed;
}

.input-hint {
    text-align: center;
    font-size: 0.75rem;
    color: var(--color-text-light);
    margin-top: 0.75rem;
}

/* Scrollbar */
.chat-container::-webkit-scrollbar,
.chat-history::-webkit-scrollbar {
    width: 6px;
}

.chat-container::-webkit-scrollbar-track,
.chat-history::-webkit-scrollbar-track {
    background: transparent;
}

.chat-container::-webkit-scrollbar-thumb,
.chat-history::-webkit-scrollbar-thumb {
    background: var(--color-border);
    border-radius: 3px;
}

.chat-container::-webkit-scrollbar-thumb:hover,
.chat-history::-webkit-scrollbar-thumb:hover {
    background: var(--nhc-green);
}

/* Mobile Responsive */
@media (max-width: 768px) {
    .sidebar {
        position: fixed;
        right: -300px;
        top: 0;
        bottom: 0;
        z-index: 100;
        box-shadow: var(--shadow-lg);
    }

    .sidebar.open {
        transform: translateX(-300px);
    }

    .header-actions {
        gap: 0.5rem;
    }

    .action-btn span {
        display: none;
    }

    .chat-container {
        padding: 1rem;
    }

    .user-message .message-content,
    .bot-message .message-content {
        max-width: 85%;
    }

    .welcome-message {
        padding: 2rem 1rem;
    }

    .input-area {
        padding: 1rem;
    }

    .language-switcher {
        margin-bottom: 0.75rem;
    }

    .lang-btn {
        font-size: 0.8rem;
        padding: 0.4rem;
    }
}

/* RTL Support */
html[dir="ltr"] .sidebar {
    border-left: none;
    border-right: 1px solid var(--color-border);
}

html[dir="ltr"] .user-message {
    flex-direction: row;
    margin-left: 0;
    margin-right: auto;
}

html[dir="ltr"] .user-message .message-content {
    border-radius: 16px 16px 16px 4px;
}

html[dir="ltr"] .bot-message .message-content {
    border-radius: 16px 16px 4px 16px;
}

html[dir="ltr"] .suggestion-btn:hover {
    transform: translateX(4px);
}

html[dir="ltr"] .send-btn {
    margin-left: auto;
    margin-right: 0;
}

@media (max-width: 768px) {
    html[dir="ltr"] .sidebar {
        right: auto;
        left: -300px;
    }

    html[dir="ltr"] .sidebar.open {
        transform: translateX(300px);
    }
}

/* Settings Modal */
.modal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: none;
    align-items: center;
    justify-content: center;
    z-index: 1000;
}

.modal.show {
    display: flex;
}

.modal-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(4px);
}

.modal-content {
    position: relative;
    background: var(--color-white);
    border-radius: 16px;
    box-shadow: var(--shadow-lg);
    width: 90%;
    max-width: 600px;
    max-height: 90vh;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    animation: modalSlideIn 0.3s ease;
}

@keyframes modalSlideIn {
    from {
        opacity: 0;
        transform: translateY(-20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.modal-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 24px;
    border-bottom: 1px solid var(--color-border);
}

.modal-title {
    font-size: 20px;
    font-weight: 600;
    color: var(--color-text-primary);
}

.modal-close {
    width: 36px;
    height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: transparent;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    color: var(--color-text-secondary);
    transition: all 0.2s;
}

.modal-close:hover {
    background: var(--color-background);
    color: var(--color-text-primary);
}

.modal-body {
    padding: 24px;
    overflow-y: auto;
    flex: 1;
}

.modal-footer {
    display: flex;
    gap: 12px;
    padding: 20px 24px;
    border-top: 1px solid var(--color-border);
    justify-content: flex-end;
}

/* Form Elements */
.form-group {
    margin-bottom: 24px;
}

.form-group:last-child {
    margin-bottom: 0;
}

.form-label {
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-size: 14px;
    font-weight: 500;
    color: var(--color-text-primary);
    margin-bottom: 8px;
}

.temperature-value {
    font-weight: 600;
    color: var(--nhc-green);
    background: var(--nhc-light-green);
    padding: 2px 8px;
    border-radius: 6px;
    font-size: 13px;
}

.form-select,
.form-input {
    width: 100%;
    padding: 12px 16px;
    border: 1px solid var(--color-border);
    border-radius: 8px;
    font-size: 14px;
    font-family: 'Cairo', sans-serif;
    color: var(--color-text-primary);
    background: var(--color-white);
    transition: all 0.2s;
}

.form-select:focus,
.form-input:focus {
    outline: none;
    border-color: var(--nhc-green);
    box-shadow: 0 0 0 3px rgba(0, 166, 81, 0.1);
}

.form-select:disabled {
    background: var(--color-background);
    cursor: not-allowed;
    opacity: 0.6;
}

.form-slider {
    width: 100%;
    height: 6px;
    border-radius: 3px;
    background: var(--color-border);
    outline: none;
    -webkit-appearance: none;
}

.form-slider::-webkit-slider-thumb {
    -webkit-appearance: none;
    appearance: none;
    width: 18px;
    height: 18px;
    border-radius: 50%;
    background: var(--nhc-green);
    cursor: pointer;
    box-shadow: 0 2px 4px rgba(0, 166, 81, 0.3);
    transition: all 0.2s;
}

.form-slider::-webkit-slider-thumb:hover {
    transform: scale(1.1);
    box-shadow: 0 2px 8px rgba(0, 166, 81, 0.4);
}

.form-slider::-moz-range-thumb {
    width: 18px;
    height: 18px;
    border-radius: 50%;
    background: var(--nhc-green);
    cursor: pointer;
    border: none;
    box-shadow: 0 2px 4px rgba(0, 166, 81, 0.3);
    transition: all 0.2s;
}

.form-slider::-moz-range-thumb:hover {
    transform: scale(1.1);
    box-shadow: 0 2px 8px rgba(0, 166, 81, 0.4);
}

.slider-labels {
    display: flex;
    justify-content: space-between;
    margin-top: 8px;
    font-size: 12px;
    color: var(--color-text-light);
}

.form-hint {
    display: block;
    margin-top: 6px;
    font-size: 12px;
    color: var(--color-text-light);
}

.api-key-input-group {
    display: flex;
    gap: 8px;
}

.api-key-input-group .form-input {
    flex: 1;
}

.btn-test {
    display: flex;
    align-items: center;
    gap: 6px;
    padding: 12px 16px;
    background: var(--color-background);
    border: 1px solid var(--color-border);
    border-radius: 8px;
    font-size: 14px;
    font-weight: 500;
    color: var(--color-text-primary);
    cursor: pointer;
    transition: all 0.2s;
    white-space: nowrap;
}

.btn-test:hover {
    background: var(--nhc-light-green);
    border-color: var(--nhc-green);
    color: var(--nhc-green);
}

.btn-test:disabled {
    opacity: 0.5;
    cursor: not-allowed;
}

.btn-test svg {
    flex-shrink: 0;
}

.api-test-result {
    margin-top: 8px;
    padding: 10px 14px;
    border-radius: 8px;
    font-size: 13px;
    font-weight: 500;
}

.api-test-result.success {
    background: #E8F5E9;
    color: #2E7D32;
    border: 1px solid #A5D6A7;
}

.api-test-result.error {
    background: #FFEBEE;
    color: #C62828;
    border: 1px solid #EF9A9A;
}

.btn-primary,
.btn-secondary {
    padding: 12px 24px;
    border-radius: 8px;
    font-size: 14px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s;
    border: none;
    font-family: 'Cairo', sans-serif;
}

.btn-primary {
    background: var(--nhc-green);
    color: var(--color-white);
}

.btn-primary:hover {
    background: var(--nhc-dark-green);
    box-shadow: 0 4px 8px rgba(0, 166, 81, 0.2);
}

.btn-primary:disabled {
    opacity: 0.6;
    cursor: not-allowed;
}

.btn-secondary {
    background: transparent;
    color: var(--color-text-primary);
    border: 1px solid var(--color-border);
}

.btn-secondary:hover {
    background: var(--color-background);
}

.success-toast {
    position: fixed;
    bottom: 24px;
    right: 24px;
    padding: 16px 24px;
    background: var(--nhc-green);
    color: var(--color-white);
    border-radius: 12px;
    box-shadow: var(--shadow-lg);
    font-weight: 500;
    animation: toastSlideIn 0.3s ease;
    z-index: 2000;
}

@keyframes toastSlideIn {
    from {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* RTL Support for Modal */
html[dir="rtl"] .modal-footer {
    flex-direction: row-reverse;
}

html[dir="rtl"] .success-toast {
    right: auto;
    left: 24px;
}

/* Theme Selector */
.theme-selector {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    gap: 1rem;
    margin-bottom: 0.75rem;
}

.theme-option {
    position: relative;
    cursor: pointer;
    border: 2px solid var(--color-border);
    border-radius: 12px;
    padding: 0.75rem;
    transition: all 0.3s;
    background: var(--color-background);
}

.theme-option:hover {
    border-color: var(--nhc-green);
    transform: translateY(-4px);
    box-shadow: var(--shadow-md);
}

.theme-option.selected {
    border-color: var(--nhc-green);
    background: var(--nhc-light-green);
}

.theme-preview {
    width: 100%;
    height: 100px;
    border-radius: 8px;
    overflow: hidden;
    display: flex;
    gap: 4px;
    margin-bottom: 0.75rem;
    box-shadow: var(--shadow-sm);
}

.theme-nhc {
    background: #F5F7FA;
}

.theme-readpo {
    background: #0A0B0D;
}

.preview-sidebar {
    width: 35%;
    display: flex;
    flex-direction: column;
    gap: 3px;
    padding: 6px;
}

.theme-nhc .preview-sidebar {
    background: #FAFBFC;
    border-right: 1px solid #E5E8EB;
}

.theme-readpo .preview-sidebar {
    background: #1A1B1F;
    border-right: 1px solid #2C2D33;
}

.theme-nhc .preview-sidebar::before,
.theme-nhc .preview-sidebar::after {
    content: '';
    height: 6px;
    background: #E5E8EB;
    border-radius: 2px;
}

.theme-readpo .preview-sidebar::before,
.theme-readpo .preview-sidebar::after {
    content: '';
    height: 6px;
    background: #2C2D33;
    border-radius: 2px;
}

.preview-main {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 3px;
    padding: 6px;
}

.preview-header {
    height: 12px;
    border-radius: 3px;
}

.theme-nhc .preview-header {
    background: linear-gradient(90deg, #00A651 0%, #008542 100%);
}

.theme-readpo .preview-header {
    background: linear-gradient(90deg, #6366F1 0%, #8B5CF6 100%);
}

.preview-message {
    height: 10px;
    border-radius: 3px;
    width: 80%;
}

.theme-nhc .preview-message {
    background: #FFFFFF;
}

.theme-readpo .preview-message {
    background: #25262B;
}

.preview-message.user {
    width: 60%;
    margin-left: auto;
    margin-right: 0;
}

.theme-nhc .preview-message.user {
    background: #F0F4F8;
}

.theme-readpo .preview-message.user {
    background: #2C2D33;
}

.theme-info {
    text-align: center;
}

.theme-name {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-text-primary);
    margin-bottom: 0.25rem;
}

.theme-desc {
    font-size: 0.75rem;
    color: var(--color-text-secondary);
}

.theme-check {
    position: absolute;
    top: 0.5rem;
    right: 0.5rem;
    width: 24px;
    height: 24px;
    background: var(--nhc-green);
    border-radius: 50%;
    display: none;
    align-items: center;
    justify-content: center;
    color: white;
}

.theme-option.selected .theme-check {
    display: flex;
    animation: checkPop 0.3s ease;
}

@keyframes checkPop {
    0% {
        transform: scale(0);
    }

    50% {
        transform: scale(1.2);
    }

    100% {
        transform: scale(1);
    }
}

.form-divider {
    height: 1px;
    background: var(--color-border);
    margin: 1.5rem 0;
}


/* Sidebar Footer */
.sidebar-footer {
    padding: 1rem;
    border-top: 1px solid var(--color-border);
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

/* Language Toggle Button */
.lang-toggle-btn {
    background: transparent;
    border: 1px solid var(--color-border);
    color: var(--color-text-secondary);
    cursor: pointer;
    padding: 0.5rem;
    border-radius: 8px;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    transition: all 0.2s;
    margin-inline-end: auto;
    /* Push other buttons to the end */
}

.lang-toggle-btn:hover {
    background: white;
    color: var(--nhc-green);
    border-color: var(--nhc-green);
    box-shadow: var(--shadow-sm);
}

.lang-code {
    font-size: 0.8rem;
    font-weight: 600;
    text-transform: uppercase;
}

.settings-btn,
.logout-btn {
    background: transparent;
    border: 1px solid var(--color-border);
    color: var(--color-text-secondary);
    cursor: pointer;
    padding: 0.5rem;
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s;
    width: 36px;
    height: 36px;
}

.settings-btn:hover,
.logout-btn:hover {
    background: white;
    color: var(--nhc-green);
    border-color: var(--nhc-green);
    box-shadow: var(--shadow-sm);
}

.logout-btn:hover {
    color: #ef4444;
    border-color: #ef4444;
}